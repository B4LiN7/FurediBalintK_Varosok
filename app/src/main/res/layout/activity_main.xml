<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/editText_Main_Kereses"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Keresés"
        />

    <Button
        android:id="@+id/button_Main_Kereses"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText_Main_Kereses"
        android:text="Keresés"
        />

    <Button
        android:id="@+id/button_Main_Uj"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_Main_Kereses"
        android:text="Új felvétele"
        />

</RelativeLayout>